<section class="content--full">
    <div class="container-fluid">
        <div class="row ">
            
            <% for(i= 0; i < contentFullwidth.length; i++) {%>
                <div class="col-xs-12">
                    <h4 class="content-full-title title__underline">
                        <%- contentFullwidth[i].title %>
                    </h4>
                    <p <% if (twoColumns) {%> class="txt__columns--2" <%}%>>
                        <%- contentFullwidth[i].body %>
                    </p>
                </div>
            <% } %>
        </div>
    </div>
</section>
 