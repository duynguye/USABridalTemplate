<!-- HEADER TRIO -->
<section class="container-fluid sub-hero__section--trio">
    <div class="row">
         <div class="social__links hidden-sm hidden-xs">
            <a href="#">
                <i class="fab fa-facebook-f"></i>
            </a>
            <a href="#">
                <i class="fab fa-twitter"></i>
            </a>
            <a href="#">
                <i class="fab fa-pinterest"></i>
            </a>
            <a href="#">
                <i class="fab fa-instagram"></i>
            </a>
        </div>
        <div class="col-xs-8 col-sm-8 col-md-7 col-sm-push-1 col-md-push-1">
            <div class="trio__header">
                <% include ./breadcrumb %>
                <h1>
                    <small>
                        <%= page.smallTitle %>
                    </small>
                    <%- page.largeTitle %>
                </h1>
                <p>
                    <%- page.description %>
                </p>
            </div>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-5 col-lg-4 col-md-pull-1">
            <img class="sub-hero__img-hero" src="<%= image.hero %>" alt="<%= image.heroAlt %>" />
        </div>
        <div class="col-lg-2"></div>
    </div>
    <div class="row row--eq-height">
        <div class="col-md-6 col-lg-7" style="background: url('<%= image.heroSupport %>') center no-repeat; background-size: cover;">
            <div class="sub-hero__arrow-accent hidden-sm hidden-xs">
                <div class="sub-hero__arrow-accent__container">
                    <i class="fas fa-arrow-down"></i>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-5 sub-hero__cta">
            <h4 class="title__underline">
                <%= cta.title %>
            </h4>
            <%
                className = ""
                if (cta.columns) {
                    className = "class=txt__columns--2";
                }
            %>
            <p <%= className %>>
                <%- cta.description %>
            </p>
        </div>
    </div>
</section>
<!-- end HEADER TRIO -->