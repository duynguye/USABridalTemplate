<section class="section btf__section--lp animation-object--fade-up">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5 btf__section--lp__img" style="background-image: url(<%= lp_btf.row_1_img %>)">                
            </div>
            <div class="col-md-push-1 col-md-6 btf__section--lp__txt">
                <div class="btf__section--lp__txt__content">
                    <h3 class="accent__offset-lines">
                       <%- lp_btf.row_1_title %>
                    </h3>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- row 2 -->
<section class="section btf__section--lp-row2" id="info">
    <div class="container">
        <div class="row">
            <div class="col-md-6 btf__section--lp-row2__content">
                <h4 class="title__underline">
                    <%= lp_btf.row_2_title %>
                </h4>
                <p><%- lp_btf.row_2_desc %></p>
            </div>
            <div class="col-md-3 btf__section--lp-row2__img">
                <img src="<%= lp_btf.row_2_img %>">                 
            </div>
        </div>
    </div>
</section>
<!-- row 3 -->
<section class="section btf__section--lp-row3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-push-2 col-md-push-1 col-md-2 btf__section--lp-row3__accent">
                <div class="landing-page-btf-row3-section__accent-box"></div>
            </div>
            <div class="col-lg-push-1 col-md-9 btf__section--lp-row3__content" style="background-image: url(<%= lp_btf.row_3_img %>)">
                <div class="landing-page-btf-section-txt__content">
                    <h4 class="title__underline">
                        <%= lp_btf.row_3_title %>
                    </h4>
                    <%- lp_btf.row_3_desc %>
                </div>
            </div>
        </div>
    </div>
</section>